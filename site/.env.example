#####################################
####### Litmus 환경 설정 파일 ########
#####################################
# 이 파일을 복사하여 .env 파일을 만들고 실제 값으로 수정하세요
# cp .env.example .env

#####################################
########## Django 기본 설정 ##########
#####################################

# Django Secret Key (새로 생성하세요!)
# 생성 방법: python3 -c 'from django.core.management.utils import get_random_secret_key;print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-generate-new-one

# 허용된 호스트 (쉼표로 구분, 도메인이나 IP 주소)
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost,yoursite.com

#####################################
######### 데이터베이스 설정 ##########
#####################################

# MySQL 데이터베이스 비밀번호
DB_PASSWORD=your-database-password

#####################################
########### 이메일 설정 #############
#####################################

# 이메일 백엔드 설정
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP 서버 설정
EMAIL_HOST=smtp.your-domain.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@your-domain.com
EMAIL_HOST_PASSWORD=your-email-password

#####################################
######### 문제 데이터 경로 ###########
#####################################

# 문제 테스트 케이스가 저장될 디렉토리 경로
DMOJ_PROBLEM_DATA_ROOT=/home/ubuntu/problems

#####################################
####### MOSS API (표절 검사) ########
#####################################

# Stanford MOSS API 키 (표절 검사용, 선택사항)
MOSS_API_KEY=your-moss-api-key

#####################################
####### Keycloak 연동 설정 ###########
#####################################
# SSO(Single Sign-On) 연동을 위한 Keycloak 설정 (선택사항)

# Keycloak 클라이언트 정보
SOCIAL_AUTH_KEYCLOAK_KEY=your-keycloak-client-id
SOCIAL_AUTH_KEYCLOAK_SECRET=your-keycloak-client-secret

# Keycloak 공개 키 (RSA 공개 키, 줄바꿈 없이 한 줄로)
SOCIAL_AUTH_KEYCLOAK_PUBLIC_KEY=MIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEA...your-public-key-here...IDAQAB

# Keycloak 서버 정보
SOCIAL_AUTH_KEYCLOAK_DOMAIN=keycloak.your-domain.com
SOCIAL_AUTH_KEYCLOAK_REALM=your-realm-name
SOCIAL_AUTH_KEYCLOAK_ALGORITHM=RS256

# 추가 인증 설정
SOCIAL_AUTH_KEYCLOAK_EXTRA_ARGUMENTS={"scope": "openid profile email"}
SOCIAL_AUTH_JWT_AUDIENCE=your-client-id

#####################################
########## 주의사항 #################
#####################################
# 1. 절대 실제 .env 파일을 Git에 커밋하지 마세요
# 2. SECRET_KEY는 반드시 새로 생성하세요
# 3. 데이터베이스 비밀번호는 강력한 것을 사용하세요
# 4. 이메일 서버 정보는 실제 SMTP 서버로 설정하세요
# 5. Keycloak 설정은 SSO가 필요한 경우에만 설정하세요